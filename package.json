{
  "name": "hackathon-ai-mentor",
  "version": "2.0.0",
  "description": "Interactive AI Mentor presentation app for hackathons - ChatGPT style interface with pre-scripted content",
  "main": "src/main.js",
  "scripts": {
    "dev": "python3 -m http.server 8080",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint src/*.js --fix",
    "format": "prettier --write \"**/*.{js,html,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,html,css,md}\"",
    "docker:build": "docker build -t hackathon-ai-mentor .",
    "docker:run": "docker run -d --name ai-presenter -p 8080:80 hackathon-ai-mentor",
    "docker:stop": "docker stop ai-presenter && docker rm ai-presenter",
    "docker:dev": "docker compose up",
    "docker:dev:down": "docker compose down"
  },
  "keywords": [
    "hackathon",
    "presentation",
    "ai",
    "chatgpt",
    "mentor",
    "interactive"
  ],
  "author": "Giovanni Tommasini",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.11",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!*.config.js",
      "!src/main.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 4
  }
}

